@model MyBlog.Models.Article
@{
    Layout = "Admin_Layout";
    ViewData["Title"] = "Article Edit";
}

<aside class="right-side">
    <section class="content-header">
        <h1>Article</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item pt-1">
                <a href="#"><i class="fa fa-fw fa-home"></i> Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-controller="Article">Articles</a>
            </li>
            <li class="breadcrumb-item active">
                Edit
            </li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title d-inline">
                            <i class="fa fa-fw fa-crosshairs"></i> Edit Article
                        </h3>
                        <span class="pull-right">
                            <i class="fa fa-fw fa-chevron-up clickable"></i>
                            <i class="fa fa-fw fa-times removepanel"></i>
                        </span>
                    </div>
                    <div class="card-body">
                        <form role="form" asp-action="Edit" asp-controller="Article" method="post">
                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label">Category:</label>
                                <select id="select21" asp-for="CategoryId" class="form-control select2" style="width:100%">
                                    <option value="">Select category...</option>
                                    @foreach(var category in ViewBag.Categories)
                                    {
                                        <option value="@category.Id">@category.Title</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Title">Title:</label>
                                <div class="col-lg-10 col-md-10  col-sm-12 col-12 col-sm-12">
                                    <input asp-for="Title" type="text" class="form-control form-control-lg" value="@Model.Title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Content">Content:</label>
                                <div class="col-lg-10 col-md-10  col-sm-12 col-12 col-sm-12">
                                    <input asp-for="Content" type="text" class="form-control form-control-lg" value="@Model.Content">
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-labeled btn-success mb-3">
                                    <span class="btn-label">
                                        <i class="fa fa-check"></i>
                                    </span> Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>