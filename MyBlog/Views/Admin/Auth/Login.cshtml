@model MyBlog.Models.LoginModel
@{
    Layout = "~/Views/Admin/Auth/Auth_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="col-md-8  col-sm-8  col-10 mx-auto login-content">
    <div class="row">
        <div class="col-md-12">
            <div class="header">
                <h2 class="text-center">
                    Login
                    <small> with</small>
                    <img src="~/admin/img/pages/logo.png" alt="logo">
                </h2>
            </div>
        </div>
    </div>
    <div class="row row-bg-color">
        <div class="col-lg-8 col-12 core-login">
            <form class="form-horizontal" asp-action="Login" asp-controller="Auth" method="post">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group ">
                            <label class="control-label" asp-for="Login">LOGIN</label>
                            <div class="input-group">
                                <input type="text" placeholder="Login" class="form-control" asp-for="Login"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group ">
                            <label class="control-label" asp-for="Password">PASSWORD</label>
                            <div class="input-group">
                                <input type="password" placeholder="Password" class="form-control" asp-for="Password"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="checkbox" name="remember" id="remember"> &nbsp;
                    <label for="remember"> Remember Me </label>
                    <a href="#" id="forgot" class="text-primary forgot1  pull-right"> Forgot Password? </a>
                </div>
                <div class="form-group ">
                    <button type="submit"  class="btn btn-primary login-btn">Login</button>
                    <br>
                    <hr>
                    <span> New to Core Plus?<a asp-action="Register" asp-controller="Auth"> Sign Up</a></span>
                </div>
            </form>
        </div>
        <div class="col-lg-4 col-12">
            <div class="social-buttons">
                <p class="text-center">
                    <label>YOU CAN ALSO LOGIN WITH</label>
                </p>
                <a class="btn btn-block btn-social btn-google-plus text-white">
                    <i class="fa fa-google-plus"></i> Login with Google
                </a>
                <a class="btn btn-block btn-social btn-facebook  text-white">
                    <i class="fa fa-facebook"></i> Login with Facebook
                </a>
                <a class="btn btn-block btn-social btn-twitter text-white">
                    <i class="fa fa-twitter"></i> Login with Twitter
                </a>
                <a class="btn btn-block btn-social btn-linkedin text-white">
                    <i class="fa fa-linkedin"></i> Login with LinkedIn
                </a>
            </div>
        </div>
    </div>
    </div>

@section scripts{
    <!-- page level js -->
    <script type="text/javascript" src="~/admin/vendors/iCheck/js/icheck.js"></script>
    <script src="~/admin/vendors/bootstrapvalidator/js/bootstrapValidator.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/admin/js/custom_js/login.js"></script>
    <!-- end of page level js -->
}

@section style{
    <!--page level css -->
    <link rel="stylesheet" href="~/admin/vendors/iCheck/css/all.css"/>
    <link rel="stylesheet" type="text/css" href="~/admin/css/custom.css">
    <link href="~/admin/vendors/iCheck/css/all.css" rel="stylesheet">
    <link href="~/admin/css/login2.css" rel="stylesheet">
    <!--end page level css-->
}